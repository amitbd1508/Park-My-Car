<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.blakflag.parkmycar.activity.MapsActivity" />
    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/map"
        android:layout_alignRight="@+id/map"
        android:layout_alignTop="@+id/map"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_map_drawer"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu" />

        <EditText
            android:id="@+id/etLocationSearchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/iv_map_drawer"
            android:background="#ffffff"
            android:hint="Search location"
            android:padding="6dp"
            android:textColor="#000000"
            android:textSize="@dimen/et_text_size" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/requstcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_search"
        android:layout_margin="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_parking_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"

                    android:text="Dhanmondi, Dhaka"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="17dp" />


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="Price: "
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="#000000"
                    android:text="Hour : " />

                <com.appyvet.rangebar.RangeBar
                    android:id="@+id/rangebar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingTop="5dp"
                    custom:rangeBar="false"
                    custom:tickEnd="4"
                    custom:tickInterval="1"
                    custom:tickStart="1"

                    />
            </LinearLayout>




            <Button
                android:id="@+id/btnRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6200ea"
                android:text="Request"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ListView

        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:padding="3dp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/requstcard"
        android:layout_alignLeft="@+id/requstcard"
        android:layout_alignStart="@+id/requstcard" />

    <ImageButton
        android:id="@+id/btnLocationPin"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/location_pin" />

    <android.support.v7.widget.CardView
        android:id="@+id/layout_response_from_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:cardElevation="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/layout_search"
        android:layout_alignStart="@+id/layout_search">

        <LinearLayout
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_user_maps_driver_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/location_pin" />

                <TextView
                    android:id="@+id/response_contact_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amit"
                    android:textSize="14sp" />

                <android.support.v4.widget.Space
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />

               <!-- <ImageView
                    android:id="@+id/iv_user_maps_car_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/location_pin" />-->

                <TextView
                    android:id="@+id/ratting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnResponseContatc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contact" />

                <Button
                    android:id="@+id/btnnavigate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Navigate" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="2">


                <ImageButton
                    android:id="@+id/ib_user_maps_op3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_share"
                    android:tint="#0288d1" />

                <ImageButton
                    android:id="@+id/ib_user_maps_op2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="#d50000" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>